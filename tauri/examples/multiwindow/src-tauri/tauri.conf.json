{
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool"
    },
    "allowlist": {
      "all": true
    },
    "windows": [{
      "label": "Main",
      "url": "app",
      "title": "Tauri - Main",
      "width": 800,
      "height": 600
    }, {
      "label": "Secondary",
      "url": "app",
      "title": "Tauri - Secondary",
      "width": 600,
      "height": 400
    }],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    }
  }
}